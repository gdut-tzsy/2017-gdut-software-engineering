/*视频播放样式*/
.video_cover {
    position: relative;
    display: inline-block;
}

.video_cover:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .3);
}

.video_cover:after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 60px;
    height: 60px;
    margin-left: -30px;
    margin-top: -30px;
    background: url(../images/play_128px.png) no-repeat;
    background-size: contain
}

#mask {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.68);
    z-index: 999;
}

.normal_dialog {
    position: fixed;
    z-index: 1000;
    width: 100%;
    max-width: 480px;
}

.scaleIn {
    animation: scaleIn .5s;
    -webkit-animation: scaleIn .5s;
}

@keyframes scaleIn {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}

@-webkit-keyframes scaleIn {
    0% {
        -webkit-transform: scale(0);
    }
    100% {
        -webkit-transform: scale(1);
    }
}